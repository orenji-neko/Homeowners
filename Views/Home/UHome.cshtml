@{
    ViewData["UHome"] = "Uhome";
}

<partial name="_Unavbar" />

<link rel="stylesheet" href="~/css/uhome.css">

<div class="image-container">
    <img src="~/image/logo.png" alt="Logo" class="logo">
    <div class="background-wrapper">
        <img src="~/image/back1.png" alt="Background Image" class="background-image">
    </div>
</div>
<div class="content-container">
    <div class="header-container">
        <b class="header-text">The evolution of</b>
        <span class="subheader-text">property discovery</span>
    </div>
    <br class="description-text"><p><div class="description">"Discover a seamless way to explore premium properties, tailored to your lifestyle, with exclusive<br>
     investment opportunities right at your fingertips."</div></p>
    <div class="oval">
        <div class="flex-item">
            <b>Location</b>
            <span>Choose your area</span>
        </div>
        <div class="flex-item">
            <b>Select unit type</b>
            <span>Choose your preferred home</span>
        </div>
        <div class="flex-item">
            <b>Price range</b>
            <span>Set your budget</span>
        </div>
        <div class="search-circle">
            <img src="~/image/search.png" alt="Search" class="search" style="width: auto; height: 30px;">
        </div>
    </div>
</div>
<div class="content-bottom">
    <div class="content-button">
        <button class="1">Home</button>
        <button class="2">Villa</button>
        <button class="2">Apartment</button>
        <button class="point" style="width: auto; height: 41px;" onclick="window.location.href='URL_FOR_LEFT';">
            <img src="~/image/leftpoint.png">
        </button>
        <button class="point" style="width: auto; height: 41px;" onclick="window.location.href='URL_FOR_RIGHT';">
            <img src="~/image/rightpoint.png">
        </button>
    </div>
    <div class="header-first">Featured</div>
    <div class="content-first">
        <div class="first-content">
            <img src="~/image/fa1.png" height="310px" width="280px">
            <div class="Details">
                <h2>Willow Creek Manor</h2>
                <p>This charming property is nestled in the scenic Blue Ridge Mountains, offering a mix of modern amenities and rustic charm.</p>
                 <div class="details">
                    <span>Room: 8</span>
                    <span>Bathrooms: 3.5</span>
                    <span>Beedrooms: 4</span>
                    <span>Carolina, USA</span>
                    <div class="bottom-details">
                        <span><b>$850,000</b></span>
                        <button>See more</button>
                    </div>
                 </div>
            </div>
        </div>
        <div class="first-content">
            <img src="~/image/fa2.png" height="310px" width="280px">
            <div class="Details">
                <h2>Cotswolds, England, UK</h2>
                <p>A quaint countryside cottage with a thatched roof, surrounded by lush gardens and rolling hills. Perfect for a cozy retreat.</p>
                <div class="details">
                    <span>Room: 6</span>
                    <span>Bathrooms: 3.5</span>
                    <span>Beedrooms: 3</span>
                    <span>Carolina, USA</span>
                    <div class="bottom-details">
                        <span><b>$70,000</b></span>
                        <button>See more</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="content-button2">
        <button class="1">Function Halls</button>
        <button class="2">Swimming Pools</button>
        <button class="point" style="width: auto; height: 41px;" onclick="window.location.href='URL_FOR_LEFT';">
            <img src="~/image/leftpoint.png">
        </button>
        <button class="point" style="width: auto; height: 41px;" onclick="window.location.href='URL_FOR_RIGHT';">
            <img src="~/image/rightpoint.png">
        </button>
    </div>
    <div class="header-first">Facility Reservation</div>
    <div class="content-first">
        <div class="first-content">
            <img src="~/image/fa3.png" height="310px" width="280px">
            <div class="Details">
                <h2>Grand Vista Hall</h2>
                <p>A stunning, versatile event space with floor-to-ceiling windows, elegant decor, and state-of-the-art amenities.</p>
                <div class="details">
                    <span>Room: 8</span>
                    <span>Bathrooms: 3.5</span>
                    <span>Beedrooms: 4</span>
                    <span>Carolina, USA</span>
                    <div class="bottom-details">
                        <span><b>$850,000</b></span>
                        <button>See more</button>
                    </div>
                </div>
            </div>
        </div>
        <div class="first-content">
            <img src="~/image/fa4.png" height="310px" width="280px">
            <div class="Details">
                <h2>ProMeet Hall</h2>
                <p>A sleek, modern meeting space equipped with advanced audio-visual technology, including a high-quality projector </p>
                <div class="details">
                    <span>Room: 6</span>
                    <span>Bathrooms: 3.5</span>
                    <span>Beedrooms: 3</span>
                    <span>Carolina, USA</span>
                    <div class="bottom-details">
                        <span><b>$70,000</b></span>
                        <button>See more</button>
                    </div>      
                </div>
            </div>
        </div>
    </div>
</div>

<partial name="_Ufooter" />
